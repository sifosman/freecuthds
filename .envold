# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/freecut?retryWrites=true&w=majority

# Base URL for generating links
BASE_URL=https://your-vercel-app.vercel.app

# Botsailor API Configuration
BOTSAILOR_API_URL=https://api.botsailor.com/v1
BOTSAILOR_API_KEY=your_botsailor_api_key_here
EXPECTED_WEBHOOK_TOKEN=your_webhook_verification_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id

# Google Cloud Vision API
# For local development: path to credentials file
GOOGLE_APPLICATION_CREDENTIALS=./google-cloud-credentials.json
# For Vercel deployment: JSON credentials as a string
# GOOGLE_CREDENTIALS={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
